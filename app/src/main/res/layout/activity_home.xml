<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="escapes.ismail_pc.imath.home">

    <ImageView
        app:srcCompat="@drawable/home_bg"
        android:id="@+id/imageView"
        android:scaleType="centerCrop"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_height="360dp"
        android:layout_width="630dp"
        app:layout_constraintVertical_bias="0.45" />

    <ImageButton
        app:srcCompat="@drawable/button_background_selector"

        android:background="#00000000"
        android:id="@+id/lens"
        android:scaleType="fitStart"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        app:layout_constraintRight_toRightOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.97"
        app:layout_constraintHorizontal_bias="0.33"
        android:layout_height="150dp"
        android:layout_width="158dp" />

    <ImageButton
        app:srcCompat="@drawable/q_bt_all"

        android:background="#00000000"
        android:id="@+id/imageButton6"
        android:scaleType="fitStart"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        app:layout_constraintRight_toRightOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.83"
        app:layout_constraintHorizontal_bias="0.72"
        android:layout_width="190dp"
        android:layout_height="190dp" />

    <ImageButton
        app:srcCompat="@drawable/math_bt_all"

        android:background="#00000000"
        android:id="@+id/imageButton7"
        android:scaleType="fitStart"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        app:layout_constraintRight_toRightOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.18"
        app:layout_constraintHorizontal_bias="0.35"
        android:layout_width="190dp"
        android:layout_height="190dp" />

    <ImageButton
        app:srcCompat="@drawable/r_bg_all"

        android:background="#00000000"
        android:id="@+id/imageButton5"
        android:scaleType="fitStart"
        android:layout_height="155dp"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintRight_toRightOf="@+id/imageView"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.67"
        app:layout_constraintVertical_bias="0.144"
        android:layout_width="158dp" />

</android.support.constraint.ConstraintLayout>
